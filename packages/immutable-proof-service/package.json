{
	"name": "@twin.org/immutable-proof-service",
	"version": "0.0.1-next.1",
	"description": "Immutable proof contract implementation and REST endpoint definitions",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/twinfoundation/immutable-proof.git",
		"directory": "packages/immutable-proof-service"
	},
	"author": "martyn.janes@iota.org",
	"license": "Apache-2.0",
	"type": "module",
	"engines": {
		"node": ">=20.0.0"
	},
	"scripts": {
		"clean": "rimraf dist coverage docs/reference",
		"build": "tsc",
		"build:watch": "tsc-watch --onSuccess \"npm run bundle:esm\"",
		"test": "vitest --run --config ./vitest.config.ts --no-cache",
		"coverage": "vitest --run --coverage --config ./vitest.config.ts --no-cache",
		"bundle:esm": "rollup --config rollup.config.mjs --environment MODULE:esm",
		"bundle:cjs": "rollup --config rollup.config.mjs --environment MODULE:cjs",
		"bundle": "npm run bundle:esm && npm run bundle:cjs",
		"docs:clean": "rimraf docs/reference",
		"docs:generate": "typedoc",
		"docs:api": "ts-to-openapi ./ts-to-openapi.json ./docs/open-api/spec.json",
		"docs": "npm run docs:clean && npm run docs:generate && npm run docs:api",
		"dist": "npm run clean && npm run build && npm run test && npm run bundle && npm run docs",
		"prepare": "ts-patch install -s"
	},
	"dependencies": {
		"@twin.org/api-models": "next",
		"@twin.org/immutable-proof-models": "0.0.1-next.1",
		"@twin.org/core": "next",
		"@twin.org/crypto": "next",
		"@twin.org/data-json-ld": "next",
		"@twin.org/data-schema-org": "next",
		"@twin.org/entity": "next",
		"@twin.org/entity-storage-models": "next",
		"@twin.org/identity-models": "next",
		"@twin.org/immutable-storage-models": "next",
		"@twin.org/nameof": "next",
		"@twin.org/standards-w3c-did": "next",
		"@twin.org/vault-models": "next",
		"@twin.org/web": "next",
		"jsonschema": "1.4.1"
	},
	"devDependencies": {
		"@twin.org/data-schema-org": "next",
		"@twin.org/entity-storage-connector-memory": "next",
		"@twin.org/identity-connector-entity-storage": "next",
		"@twin.org/immutable-storage-connector-entity-storage": "next",
		"@twin.org/vault-connector-entity-storage": "next",
		"@twin.org/nameof-transformer": "next",
		"@twin.org/ts-to-openapi": "next",
		"@types/node": "22.6.1",
		"@vitest/coverage-v8": "2.1.1",
		"copyfiles": "2.4.1",
		"rimraf": "6.0.1",
		"rollup": "4.22.4",
		"rollup-plugin-typescript2": "0.36.0",
		"ts-patch": "3.2.1",
		"tsc-watch": "6.2.0",
		"typedoc": "0.26.7",
		"typedoc-plugin-markdown": "4.2.8",
		"typescript": "5.6.2",
		"vitest": "2.1.1"
	},
	"main": "./dist/cjs/index.cjs",
	"module": "./dist/esm/index.mjs",
	"types": "./dist/types/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/cjs/index.cjs",
			"import": "./dist/esm/index.mjs",
			"types": "./dist/types/index.d.ts"
		},
		"./locales": "./locales"
	},
	"files": [
		"dist/cjs",
		"dist/esm",
		"dist/types",
		"locales",
		"docs"
	]
}
